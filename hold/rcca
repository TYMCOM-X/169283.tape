171 REM P=PURCHASE VALUE
172 REM O1= OPTIO^: 1= GIVEN I FIND L; 2= GIVEN L FIND I
173 REM               3= GIVEN L(Y) FIND I
174 REM 02= OPTION* 0= NO EXTENSION; 1= EXTENSION
175 REM 03= OPTION: 1= PAYMENTS IN ADVANCE; 2= IN ARREARS
