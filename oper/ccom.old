         TEMP _ LPTR
         IF NOT ALPH(NXNSP) THEN GO OUT
         BACKSP; WDSTOR(PLMAX,OUT)
         IF I _ WDREC(PWD,OUT)=KPWD OR KPWD=0 THEN RETURN I
OUT:     LPTR _ TEMP; GO LAB

END FPWD


