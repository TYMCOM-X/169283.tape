PROCEDURE PRODUCT.RUN.DATE % EXT: PRD.DAT  MAG: G601RG.M#2 %

% Version 1976.04.07   / S. Albanese 

        This procedure builds the command file PRODUCT.RUN,
        and set proper outport etc. for phase 1.
%

BEGIN

FIELDS  MONTH AS DATE 'ZM',
        YEAR  AS DATE 'YY',
        RESPONSE AS 'C'

REPORT TO 'C8VABD.ME2-ANY'
  PAGE.SIZE 0

QUERY: BEGIN
       TYPE @CR, 'Enter the year and month of the run (YY,MM): '
       ACCEPT YEAR, MONTH
       TYPE @CR, 'Year and month are ', YEAR, MONTH, ' ok? '
       ACCEPT RESPONSE
       IF RESPONSE # 'Y' AND 'y' THEN REPEAT QUERY
       END

WRITE REPORT PRINT
   'RUN PRD.INVREG.LOAD', @CR,
   'RUN PRD.PROFIT.RPT',@CR, YEAR, ',', MONTH, @CR, 'Y', @CR, 'N', @CR, 'Y',@CR,
   'RUN PRD.SALNO.SCAN', @CR

END
