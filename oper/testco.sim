DEF LN.PORT(LINE) AS LN.DATA.B(LINE,10,9,17)
DEF LN.DATA.B(LINE,WORD,WIDTH,OFFSET)&
 AS F.LN.DATA(LINE,CNTRL.MASK(WORD,OFFSET,WIDTH))
DEF CNTRL.MASK(WORD,OFFSET,WIDTH) &
 AS (((((WORD BAND MSK)SHL BITS.PER.CHAR)BOR(OFFSET BAND MSK))&
  SHL BITS.PER.CHAR)BOR(WIDTH BAND MSK))SHL &
  (BITS.PER.WORD-(3*BITS.PER.CHAR))
DEF BITS.PER.CHAR AS (8-BITS.PER.WORD/25)
DEF MSK AS ((1 SHL BITS.PER.CHAR)-1)
LOCAL %F.LN.DATA
LOCAL A
LAB: A _ LN.PORT(1)
%F.LN.DATA
HALT
END F.LN.DATA
