!MACROS

!COMPILATION PARAMETERS
DEF BUF.I.NO.EL AS 0            !INIT NO. OF BUFFERLETS ***
DEF BUF.M.N.C AS 11             !>BUF.CHARS.PER.WORD;< 256 ***
!BUF.M.N.C IS THE MAXIMUM NUMBER OF CHARACTERS IN A BUFFERLET

!BUFFERLET DESCRIPTION
DEF BUF.SIZE AS 2+(BUF.M.N.C/BUF.C.P.W)       !BUFFERLET SIZE
DEF BUF.CI.L.W AS (BUF.M.N.C MOD BUF.C.P.W)   !CHARS IN LAST WORD
DEF BUF.C.P.W AS (BITS.PER.WORD/8)            !CHARS PER WORD
