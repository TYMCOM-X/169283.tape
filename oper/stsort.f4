      SUBROUTINE STSORT(N,IORD,IV,CPM,IOPT)
      DIMENSION IORD(60),IV(60),CPM(60)
      IF(N-1) 110,110,10
   10 DO 100 I=1,N-1
      JSWP=1
      DO 90 J=1,N-I
      J1=IORD(J)
      J2=IORD(J+1)
      GO TO (20,30),IOPT
   20 IF(IV(J1)-IV(J2)) 80,90,90
   30 IF(CPM(J1)-CPM(J2)) 90,90,80
   80 IORD(J)=J2
      IORD(J+1)=J1
      JSWP=2
   90 CONTINUE
      GO TO (110,100),JSWP
  100 CONTINUE
  110 RETURN
      END
